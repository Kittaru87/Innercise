<!DOCTYPE html>
<html>
  <head>
    <title>Innercise</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300;489&display=swap" rel="stylesheet">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

        <% if user_signed_in? %>
          <%= render "layouts/nav_bar_account" %>
        <% else %>
          <%= render "layouts/nav_bar_public" %> 
        <% end %>


        <% if notice %>
          <p class="notice notice-info text-right mr-4 mt-2"><%= notice %></p>
        <% elsif alert %>
          <p class="alert alert-info text-right mr-4 mt-2"><%= alert %></p>
        <% else %>
          <div class="mt-4"></div>
        <% end %>
     
  <body>
    <%= yield %>
  </body>
</html>
