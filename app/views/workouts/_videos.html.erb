
<header class="md-4" style="margin: 2em;">
  <% singular_id = id %>
  <% singular_id = id.chop if id[-1] == 's' %>
  <h2 class="text-center"><%= singular_id.capitalize %> workouts</h2>
</header>
<section class="row">

  <% workouts.each do |workout| %>
    <div class="video-div col-lg-8 text-center" style="margin-bottom: 3em; margin: 1em;">
      <h4><%= workout["title"] %></h4>
      </br>
      <p>- <%= workout["channel"] %></p>
      </br>
      <div class="embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" style="padding: 5px;" width="560" height="315" src="https://www.youtube.com/embed/<%=workout["videoId"]%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      </div>
    </div>
  <% end %>

  <div class="col-lg-3 float-right text-center">
    <% if user_signed_in? %>

      <%= render partial: "videos_account", locals: { workouts: @workouts } %>
    <% else %>

      <%= render partial: "videos_public", locals: { workouts: @workouts, id: @body_id } %>
    <% end %> 
  </div>

</section>

