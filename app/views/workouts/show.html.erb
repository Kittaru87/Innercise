<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Innercise</title>
  </head>
  <body>

  <% if @workouts.empty? %>
    <p> Sorry we cannot pull up any videos because the search quota has been reached </p>
  <% else %>
    <%= render partial: "videos", locals: { workouts: @workouts, id: @workout_id, next_page: @next_page }, class: "col-lg-9" %>

    <div>
      <%= form_with url: workout_path(@workout_id), method: :put do |form| %>
        <%= hidden_field_tag(:nextPageToken, @workouts[0]['nextPageToken']) %>
        <%= hidden_field_tag(:prevPageToken, @workouts[0]['prevPageToken']) %>
        <%= form.submit "Next", class: "btn btn-default btn-primary" %>
      <% end %>
    </div>
  <% end %>
  <div>
  <%= form_with url: workout_path(@workout_id), method: :put do |form| %>
  <div class="col-lg-1 float-right">
  <%= form.submit "Next", class: "btn btn-default btn-primary center" %>
  </div>
  <% end %>
</div>
  </body>
</html>
