<div class="rhs-info">

  <% if workouts.videoId == nil %>
    This video is broken
  <% else %>
  <br />
  

  Liking a video adds it to your profile!
  <br />
  <%= link_to workout_likes_path(workout_id: workouts.id), method: :post do %>
    <% likeWorkout = Like.where(user_id: current_user.id, workout_id: workouts.id).length %>
    <% if likeWorkout == 0 %>
        <br />
        <button id="like-btn-id" class="btn-video btn my-3">
          Like
        </button>
      <% else %>
        <button class="btn-video-liked btn my-3">
          Added to profile
        </button>
      <% end %>

      <% end %>
      <div class="rhs-info">
        <span id="like-count-id"><%= Like.workout_likes(workouts.id).length %></span> Likes
      </div>

    <br />
    <%= link_to workout_completed_workouts_path(workout_id: workouts.id), method: :post do %>
      <button id="completed-btn-id" class="btn btn-video my-3">
        I have completed this workout today
      </button>
    <% end %>

    </div>

  <% end %>

</div>
