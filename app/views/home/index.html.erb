          </div>
          <div id="responsive-card" class="card col-sm-5 col-lg-5">
            <%= link_to workout_path(:id => "glutes") do %>
              <%= image_tag 'glutes.png', class: 'card-img-top', alt: 'Card image cap' %>
              <div class="card-body">
              <h5 class="card-title text-center">GLUTES</h5>
              <h6 class="card-subtitle mb-2 text-muted text-center">Isolating muscles groups for more lift</h6>
              </div>
            <% end %>
          </div>
        </div>

        <div id="responsive-row" class="row ml-1 mr-1">
          <div id="responsive-card" class="card col-sm-5 col-lg-5">
            <%= link_to workout_path(:id => "legs") do %>
              <%= image_tag 'foto-garage-ag-legs.png', class: 'card-img-top', alt: 'Card image cap' %>
              <div class="card-body">
              <h5 class="card-title text-center">LEGS</h5>
              <h6 class="card-subtitle mb-2 text-muted text-center">Do not forget leg day</h6>
              </div>
            <% end %>
          </div>
          <div id="responsive-card" class="card col-sm-5 col-lg-5">
            <%= link_to workout_path(:id => "yoga") do %>
              <%= image_tag 'kike-vega-yoga.png', class: 'card-img-top', alt: 'Card image cap' %>
              <div class="card-body">
              <h5 class="card-title text-center">YOGA</h5>
              <h6 class="card-subtitle mb-2 text-muted text-center">Improve posture and strength</h6>
              </div>
            <% end %>
          </div>
        </div>

      </div>
    
      <div id="responsive-column" class="col-lg-3 float-right">

        <div id="rhs-info">
          <%= render partial: "most_popular" %> 
        </div>

        <div id="rhs-info">
          <%= render partial: "recommended" %> 
        </div>

      </div>
    </section>

    <script>
    </script>

  </body>
</html>