          </div>
          <div id="responsive-card" class="card col-sm-5 col-lg-5">
            <%= link_to workout_path(:id => "back") do %>
              <%= image_tag 'edgar-chaparro-back.png', class: 'card-img-top', alt: 'Card image cap' %>
              <div class="card-body">
              <h5 class="card-title text-center">BACK</h5>
              <h6 class="card-subtitle mb-2 text-muted text-center">Delts, Traps and Obliques</h6>
              </div>
            <% end %>
          </div>
        </div> 
          
        <div id="responsive-row" class="row ml-1 mr-1">
          <div id="responsive-card" class="card col-sm-5 col-lg-5">
            <%= link_to workout_path(:id => "chest") do %>
              <%= image_tag 'rohit-reddy-chest.png', class: 'card-img-top', alt: 'Card image cap' %>
