<h2 class="text-center"><%= current_user.username %>'s profile </h2>

<div class="flex-display col-lg-12 justify-content-center text-center">
  <div class="col-lg-2 profile-box-style border rounded mx-3 pt-4">
    <p>This week: </p>
    <p class="display-4"> <%= one_week %> </p>
  </div>
  <div class="col-lg-2 profile-box-style border rounded mx-3 pt-4">
    <p>This month: </p>
    <p class="display-4"> <%= one_month %></p>
  </div>
  <div class="col-lg-2 profile-box-style border rounded mx-3 pt-4">
   <p>All time: </p>
   <p class="display-4"><%= all_time %></p>
  </div>
</div>


<div class="row">
  <div class="mt-5 mx-3 col-lg-6">
    <h4>Your liked workouts</h4>
    <div>
      <%# render partial: "liked_workouts_menu", locals: { workouts: @all_workouts } %>
      <br />
      <br />
      <%= render partial: "liked_workouts", locals: { workouts: @all_workouts } %>

    </div>
  </div>
  <div class="mt-5 mx-3 col-lg-5">
    <h4>This week's completed workouts</h4>
      <%= render partial: "completed_workouts", locals: { week_workouts: @week_workouts } %>
  </div>
</div>